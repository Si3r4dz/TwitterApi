@model X.PagedList.IPagedList<MirumTest.Models.RecentTwitter>
@using X.PagedList.Mvc.Core;
@using X.PagedList.Web.Common;




<div class="content-wrap">
    <section role="main" id="content">
        <div class="tweet-search">
            <h3>Search for updates:</h3>
            <form id="search-form" asp-action="GetTwits">
                <label id="search-text-label" for="search-text" class="reader">
                    Enter some text to search
                    on:
                </label>
                <input Name="Search" maxlength="25" type="text" id="search-text" placeholder="@ViewData["Search"]" />
                <input type="submit" id="search-button" value="Search" />
            </form>
        </div>
        <div class="tweet-search-results">
            <div class="results-container">
                <h3>Search results:</h3>

                @foreach (var item in Model)
                {
                    <div class="twitter-feed">
                        <div class="tweet_id_@item.Id">
                            <p>@item.Text </p>
                            <p class="tweet-datetime">Posted by @item.Username on @item.Created_at</p>
                        </div>
                    </div>
                }
                <br />


                Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount
            <div class="pagination">
                <div class="tw"></div>
                @Html.PagedListPager(Model, page => Url.Action("Result", new { page }), PagedListRenderOptions.TwitterBootstrapPagerAligned)
                




                
            </div>
            </div>
        </div>
    </section>
</div>


